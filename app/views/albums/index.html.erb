<% if current_user? @user %>
<h3>Create Album</h3>
  <%= render"new" %>
<% end %>
<% @user.albums.each do |album| %>
  <li>
    <div class="album_all">
      <%= link_to album.title, user_album_path(@user, album) %> (<%= album.images.count %>)
      <%= link_to image_tag("https://cdn1.iconfinder.com/data/icons/softwaredemo/PNG/256x256/DeleteRed.png") , user_album_path(current_user, album), method: :delete, confirm: "Are you sure?" if current_user? @user %>
    </div>
  </li>
<% end %>
