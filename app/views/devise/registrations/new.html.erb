<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="input_new">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder:"Name" %></br>
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, placeholder:"Email" %></br>

    <div class="date_select">
      <%= f.label :birthday %>
      <%= f.date_select :birthday, order: [:day, :month, :year], start_year:  Time.now.year - 100, end_year: Time.now.year %>
    </div>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder:"Password" %></br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder:"Confirm Password" %></br>
  </div>
  <%= f.radio_button :gender, "male", checked: true %> Male

  <%= f.radio_button :gender, "female" %> Female

  <div><%= f.submit "Sign up" %></div>
<% end %>