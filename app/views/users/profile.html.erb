<% if current_user? @user %>
  <li class="dropdown">
    <a href="#" data-toggle="dropdown" class="dropdown-toggle">permission<b class="caret"></b></a>
    <ul class="dropdown-menu">
      <li><%= link_to "public", user_path(current_user, flag: "public"), method: :patch %></li>
      <li><%= link_to "friend", user_path(current_user, flag: "friend"), method: :patch %></li>
      <li><%= link_to "private", user_path(current_user, flag: "private"), method: :patch %></li>
    </ul>
  </li>
  <li class="dropdown">
    <a href="#" data-toggle="dropdown" class="dropdown-toggle">modify<b class="caret"></b></a>
    <ul class="dropdown-menu">
      <li><%= link_to "Edit profile", edit_user_path(current_user) %></li>
      <li><%= link_to "Edit password", edit_user_registration_path %></li>
    </ul>
  </li>
<% end %>
<% if current_user?(@user) || @user.public? || (current_user.friended?(@user) && @user.friend?) %>
  <div class="status_content" >  
    <ul>
      <li>User name: <%= @user.name %></li>
      <li>User email: <%= @user.email %></li>
      <li>User birthday: <%= I18n.l @user.birthday %></li>
      <li>User gender: <%= @user.gender %></li>
      <% if @user.status_relationship.present? %>
        <li>User status relationship: <%= @user.status_relationship %></li>
      <% end %>
      <% if @user.address.present? %>
        <li>User address: <%= @user.address %></li>
      <% end %>
      <% if @user.favorite_book.present? %>
        <li>User favorite book: <%= @user.favorite_book %></li>
      <% end %>
      <% if @user.favorite_quote.present? %>
        <li>User favorite quote: <%= @user.favorite_quote %></li>
      <% end %>
    </ul>
  </div>
  <% else %>
  <h4>This information is private!</h4>
<% end %>